.tool-panel
  border-right solid 1px #8b8d8d
  position relative
  float left
  padding-left 4px
  padding-right 4px
  &:last-child
    border-right none
  .tool-panel-control
    float left
    position relative
    width auto
    height 2em
    vertical-align middle
    input, select
      margin-top 0.375em
      margin-right 0.25em
    div.ms-parent
      margin-top 3px
    .label
      font-size 0.875em
      padding-left 0.25em
      padding-right 0.25em
      margin-top 0.5em
    input.color-picker
      width 4em

.icon
  float left
  position relative
  width 2em
  height 2em
  > div
    width 32px
    height 32px
    line-height 24px
    background-size 24px
    background-position 3px 3px
    background-repeat no-repeat
    &:hover
      /*background-color #babcbc*/
      opacity 0.5
  .url-dialog
    position absolute
    float left
    top 0
    z-index 2
    div
      display flex
      position fixed
      padding 10px
      background-color darkgrey
.icon.active
  div
    background-color #babcbc
